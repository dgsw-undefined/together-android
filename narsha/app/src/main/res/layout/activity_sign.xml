<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".signActivity">


    <ImageView
        android:id="@+id/logo_sign"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/base_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user_image" />

    <LinearLayout
        android:id="@+id/base_line"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="30dp"
        android:background="#2d3436"
        android:elevation="3dip"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_sign">

    </LinearLayout>

    <TextView
        android:id="@+id/title_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Undefined"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/logo_sign"
        app:layout_constraintStart_toStartOf="@+id/logo_sign"
        app:layout_constraintTop_toBottomOf="@+id/logo_sign" />

    <TextView
        android:id="@+id/text_sign_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ID"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_sign_id"
        app:layout_constraintEnd_toStartOf="@+id/edit_sign_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_sign_id" />

    <TextView
        android:id="@+id/text_sign_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="PW"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_sign_pw"
        app:layout_constraintEnd_toStartOf="@+id/edit_sign_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_sign_pw" />

    <EditText
        android:id="@+id/edit_sign_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_sign_name"
        app:layout_constraintStart_toStartOf="@+id/edit_sign_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_sign_name" />

    <EditText
        android:id="@+id/edit_sign_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="PW"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_sign_id"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edit_sign_id"
        app:layout_constraintTop_toBottomOf="@+id/edit_sign_id" />

    <TextView
        android:id="@+id/text_sign_pw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="PW Check"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_sign_PWcheck"
        app:layout_constraintEnd_toStartOf="@+id/edit_sign_PWcheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_sign_PWcheck" />

    <EditText
        android:id="@+id/edit_sign_PWcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="PW"
        android:inputType="textPassword"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_sign_pw"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edit_sign_pw"
        app:layout_constraintTop_toBottomOf="@+id/edit_sign_pw" />

    <TextView
        android:id="@+id/text_sign_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Phone"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_sign_phone"
        app:layout_constraintEnd_toStartOf="@+id/edit_sign_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_sign_phone" />

    <EditText
        android:id="@+id/edit_sign_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_sign_PWcheck"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edit_sign_PWcheck"
        app:layout_constraintTop_toBottomOf="@+id/edit_sign_PWcheck" />

    <TextView
        android:id="@+id/text_sign_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_sign_name"
        app:layout_constraintEnd_toStartOf="@+id/edit_sign_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_sign_name" />

    <EditText
        android:id="@+id/edit_sign_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_line" />

    <Button
        android:id="@+id/btn_sign_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="#00000000"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="@+id/btn_sign_to_sign2"
        app:layout_constraintEnd_toStartOf="@+id/btn_sign_to_sign2"
        app:layout_constraintTop_toTopOf="@+id/btn_sign_to_sign2"
        app:layout_constraintVertical_bias="0.125" />

    <Button
        android:id="@+id/btn_sign_to_sign2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:text="next"
        app:layout_constraintBottom_toBottomOf="@+id/btn_sign_do_sign"
        app:layout_constraintEnd_toStartOf="@+id/btn_sign_do_sign"
        app:layout_constraintTop_toTopOf="@+id/btn_sign_do_sign"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_sign_do_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:text="sign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_sign_phone" />

</android.support.constraint.ConstraintLayout>